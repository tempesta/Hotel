.container
    .card
        h5.card-header {{hotel.titulo}}
        .card-body
            .card
                .card-header 
                    | Preencha os campos
                .card-body
                    form
                        .row
                            .col
                                .form-group
                                    div 
                                        |Avaliação:
                                    div.rate
                                        input(type="radio", id="star5", name="rating", ng-value="5", ng-model='hotel.envelope.avaliacao', required)
                                        label(for="star5")
                                        input(type="radio", id="star4", name="rating", ng-value="4", ng-model='hotel.envelope.avaliacao', required)
                                        label(for="star4")
                                        input(type="radio", id="star3", name="rating", ng-value="3", ng-model='hotel.envelope.avaliacao', required)
                                        label(for="star3")
                                        input(type="radio", id="star2", name="rating", ng-value="2", ng-model='hotel.envelope.avaliacao', required)
                                        label(for="star2")
                                        input(type="radio", id="star1", name="rating", ng-value="1", ng-model='hotel.envelope.avaliacao', required)
                                        label(for="star1")
                        .row
                            .col
                                .form-group
                                    label(for="nome") Nome do hotel:
                                    input.form-control(id="nome", type="text", ng-model='hotel.envelope.nome', required)
                        .row
                            .col
                                .form-group
                                    label(for="endereco") Endereço:
                                    input.form-control(id="endereco", type="text", ng-model='hotel.envelope.endereco', required)
                        .row
                            .col
                                .form-group
                                    label(for="descricao") Descrição:
                                    textarea.form-control(id="descricao", type="text", ng-model='hotel.envelope.descricao', row="7", required)
                        .row
                            .col
                                .form-group
                                    label(for="comodidades") Comodidades desejadas:
                                    div.form-check(ng-repeat="comodidade in hotel.comodidades")
                                        input.form-check-input(type="checkbox", id="{{comodidade.Nome}}", checklist-model="hotel.comodidadesIds", checklist-value="comodidade.Id", required)
                                        label.form-check-label(for="{{comodidade.Nome}}") {{comodidade.Nome}}
                        .row
                            .col
                                .float-left
                                    button.btn.btn-outline-secondary(ng-click='hotel.voltar()') Voltar
                            .col
                                .float-right
                                    button.btn.btn-outline-secondary(type='reset') Limpar campos
                                    button.btn.btn-outline-secondary(ng-if='!hotel.editar', type='submit', ng-click='hotel.cadastrar()') Cadastrar
                                    button.btn.btn-outline-secondary(ng-if='hotel.editar', type='submit', ng-click='hotel.alterar()') Alterar